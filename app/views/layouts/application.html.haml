!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Foundation"
      %meta{:content => content_for?(:description) ? yield(:description) : "3Things", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
  %img#full-screen-background-image{:alt => "full screen background image", :src => "/backgrounds/background_wood.jpg"}
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    #main{:role => "main"}
      .container-fluid
        .row-fluid
          %a.toggles{:href => "#"}
            %i.icon-chevron-left
          #sidebar.span3
            .well.sidebar-nav
              - if current_user
                = render 'tasks/tasks', :tasks => current_user.tasks.todos, :task_type => 'Todo'
          #content.content.span9
            = render 'layouts/messages'
            = yield
            = render 'layouts/footer'